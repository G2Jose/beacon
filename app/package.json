{
  "name": "beacon",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "lint": "status=0; npm run lint:eslint || status=1; npm run lint:formatting || status=1; npm run lint:types || status=1; exit $status",
    "lint:eslint": "eslint \"**/*.js\" \"**/*.ts\" \"**/*.tsx\"",
    "lint:formatting": "prettier-eslint \"src/**/*.js\" \"src/**/*.ts\" \"src/**/*.tsx\" --list-different",
    "lint:types": "tsc --noEmit",
    "format": "prettier-eslint --write --print-width 80 \"**/*.js\" \"**/*.ts\" \"**/*.tsx\""
  },
  "dependencies": {
    "@types/jest": "^23.3.5",
    "@types/react-redux": "^6.0.9",
    "@types/redux": "^3.6.0",
    "@typescript-eslint/parser": "^0.2.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "21.25.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-typescript": "^0.12.0",
    "faker": "^4.1.0",
    "prettier": "^1.14.3",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "react": "16.6.0-alpha.8af6728",
    "react-native": "0.57.3",
    "react-native-gesture-handler": "^1.0.12",
    "react-navigation": "^3.0.9",
    "react-navigation-redux-helpers": "^2.0.9",
    "react-redux": "^5.0.7",
    "redux": "^4.0.1",
    "redux-actions": "^2.6.1",
    "redux-observable": "^1.0.0",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "@types/faker": "^4.1.4",
    "@types/react": "^16.4.18",
    "@types/react-native": "^0.57.7",
    "@types/react-navigation": "^3.0.1",
    "@types/redux-actions": "^2.3.1",
    "babel-jest": "23.6.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "eslint-plugin-react": "^7.11.0",
    "husky": "^1.3.1",
    "jest": "23.6.0",
    "lint-staged": "^8.1.0",
    "metro-react-native-babel-preset": "^0.48.1",
    "react-native-typescript-transformer": "^1.2.10",
    "react-test-renderer": "16.6.0-alpha.8af6728",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.1"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ],
    "cacheDirectory": ".jest/cache",
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/src/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier-eslint --write --print-width 80 --list-different --eslint-config-path .eslintrc.js",
      "git add"
    ]
  }
}
